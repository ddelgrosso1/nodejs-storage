{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build/cjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "CommonJS",
    "moduleResolution": "node",
  },
  "include": [
    "src/*.ts",
    "test/**/*.ts",
    "system-test/*.ts",
    "conformance-test/*.ts",
    "conformance-test/scenarios/*.ts",
    "internal-tooling/*.ts"
  ]
}
